{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"],
      "@repo/convex/*": ["../backend/convex/_generated/*"],
      "@repo/types/*": ["../../packages/types/*"]
    },
    "types": ["expo-router/types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts",
    "nativewind-env.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["../backend/convex/agent/**/*"]
}

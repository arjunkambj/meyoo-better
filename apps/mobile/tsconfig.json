{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@repo/convex/*": [
        "../backend/convex/_generated/*"
      ],
      "@repo/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@repo/types/*": [
        "../../packages/types/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}

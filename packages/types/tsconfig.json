{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "baseUrl": ".",
    "paths": {
      "@repo/convex/dataModel": [
        "../../apps/backend/convex/_generated/dataModel"
      ],
      "@repo/convex/*": [
        "../../apps/backend/convex/_generated/*",
        "../../apps/backend/convex/_generated/*.d.ts"
      ]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
